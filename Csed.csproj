<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Assembly and namespace name. -->
    <AssemblyName>csed</AssemblyName>
    <RootNamespace>Csed</RootNamespace>

    <!-- Enable manually listing compile items. -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- Compilation output config. -->
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework> 

    <!-- Other. -->
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

  </PropertyGroup>

  <!-- Compile items. -->
  <ItemGroup>
      <Compile Include="src/Program.cs" />
      <Compile Include="src/Editor.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Terminal.Gui" Version="1.18.0" />
  </ItemGroup>

</Project>
